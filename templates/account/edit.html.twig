{% extends 'layouts/base.html.twig' %}

{% block title 'Edit User Account' %}

{% block body %}
    <div class="row">
        <div class="col-md-6 mx-auto">
            <h1 class="my-5 text-center">Update Profile</h1>

            {{ form_start(form) }}
            <div class="row">
                <div class="col-md-6 mx-auto">
                    {{ form_row(form.firstName) }}
                </div>
                <div class="col-md-6 mx-auto">
                    {{ form_row(form.lastName) }}
                </div>
            </div>

            {{ form_rest(form) }}

            <button type="submit"
            class="mt-3 btn btn-primary btn-lg col-12">Apply changes</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}
